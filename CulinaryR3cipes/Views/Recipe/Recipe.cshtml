@model RecipeViewModel
@{
    ViewData["Title"] = "Recipe";
}

<h2>Recipe</h2>

<form method="post" asp-action="Recipe">
    <div asp-validation-summary="ModelOnly" class="text-danger">
        <div class="recipe">
            <div class="form-group">
                <label asp-for="Recipe.Name"></label>
                <input asp-for="Recipe.Name" />
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Time"></label>
                <input asp-for="Recipe.Time" />
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Description"></label>
                <input asp-for="Recipe.Description" />
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Name"></label>
                <input type="file" asp-for="Recipe.Img" />
            </div>
            <div id="IngredientContainer">
                <div class="form-group">
                    <label asp-for="Recipe.Ingredients.ElementAt(0).Product"></label>
                    <select asp-for="Recipe.Ingredients.ElementAt(0).ProductId" asp-items="@(new SelectList(Model.Products,"ProductId", "Name", Model.Recipe.Ingredients.ElementAt(0).ProductId)) " class="form-control"><option>Wybierz produkt</option></select>
                    <span asp-validation-for="Recipe.Ingredients.ElementAt(0).ProductId" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input id="AddNewIngredient" type="button" value="Add new ingredient" />

    </div>
</form>


