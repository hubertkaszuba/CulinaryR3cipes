@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> _signInManager;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script type="text/javascript" src="~/lib/jquery/jquery.js"></script>
    <script type="text/javascript" src="~/lib/chosen/chosen.jquery.js"></script>
    <script type="text/javascript" src="~/lib/chosen/chosen.proto.js"></script>
    <link rel="stylesheet" href="~/lib/chosen/chosen.css" />
    <link rel="stylesheet"
          asp-href-include="lib/bootstrap/dist/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">CulinaryR3cipes</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <button type="button" class="btn btn-toolbar bg-primary"><a class="nav-link" href="#">Przepisy</a></button>
                </li>
                <li class="nav-item mx-2">
                    <button type="button" class="btn btn-primary"><a class="nav-link" href="#">Lodówka</a></button>
                </li>
                <li class="nav-item">
                    <button type="button" class="btn btn-primary"><a class="nav-link" href="#">Home2</a></button>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Home2</a>
                </li>
                @if (!_signInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Login" asp-controller="Account">Login</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Logout" asp-controller="">Logout</a>
                    </li>
                }
            </ul>
            <form class="form-inline my-2 my-lg-2">
                <input class="form-control mr-sm-2" type="text" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>

    <div id="container">
        @RenderBody()
    </div>
</body>
</html>
